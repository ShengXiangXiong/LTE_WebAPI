@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>场景划分</title>
</head>
<body>
    <div>
        <h2>场景划分</h2>
        <input type="button" id="part" value="确定" /><br /><br />
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script>

    $("#part").click(function () {

        $.ajax
        ({
            url: "/api/ScenePart/PostScenePart",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data, status)
            {
                if (data.ok == true)
                {
                    alert("场景划分结束！");
                    window.location.href = "@Url.Action("Home","Home")";
                }
                else
                    alert("场景划分失败！" + data.msg);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown)
            {
                alert("场景划分失败！，消息：" + textStatus + "  " + errorThrown);
            }
        });
    });
</script>
