@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>小区理论覆盖半径计算</title>
</head>
<body>
    <div>
        <h2>小区理论覆盖半径计算</h2>
        <input type="button" id="radius" value="确定" /><br /><br />
    </div>
</body>
</html>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script>

    $("#radius").click(function () {

        $.ajax
        ({
            url: "/api/CellRadius/PostCellRadius",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data, status)
            {
                if (data.ok == true)
                {
                    alert("小区理论覆盖半径计算结束！");
                    window.location.href = "@Url.Action("Home", "Home")";
                }
                else
                    alert("小区理论覆盖半径计算失败！" + data.msg);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown)
            {
                alert("小区理论覆盖半径计算失败！，消息：" + textStatus + "  " + errorThrown);
            }
        });
    });


</script>
